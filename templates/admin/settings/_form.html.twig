                <div class="col-md-6">
                    {{ form_row(form.siteName, {
                        'label': 'Site Name',
                        'placeholder': "Please enter the name of the site"
                    }) }}
                    {{ form_row(form.siteEmail, {
                        'label': 'Site Email',
                        'placeholder': "Please enter an email for the site"
                    }) }}
                    {{ form_row(form.isSiteOffline, {
                        'label': 'Site Offline',
                    }) }}
                    {{ form_row(form.accessLevel, {
                        'label': 'Default Access Level',
                    }) }}
                    {{ form_row(form.listLimit, {
                        'label': 'Default List Limit',
                    }) }}
                    {{ form_row(form.robots, {
                        'label': 'Robots',
                        'placeholder': 'Please enter meta robots.',
                    }) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.contentRights, {
                        'label': 'Content Rights',
                    }) }}
                    {{ form_row(form.tempFolder, {
                        'label': 'Temp Folder',
                    }) }}
                    {{ form_row(form.serverTimeZone, {
                        'label': 'Server Timezone',
                    }) }}
                    {{  form_row(form.layout, {
                        'label': 'Default Page Layout',
                        'placeholder': 'The default layout of the page.'
                    }) }}
                    {{ form_row(form.language, {
                        'label': 'Site Language',
                        'placeholder': 'Please enter language.',
                    }) }}
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="metadata" role="tabpanel" aria-labelledby="metadata-tab">
            {{ form_row(form.description, {
                'label': 'Description',
                'placeholder': 'Please enter a meta description (<=155).',
            }) }}
            {{ form_row(form.contentType, {
                'label': 'Content Type',
                'placeholder': 'Please enter a meta content type.',
            }) }}
            {{ form_row(form.keywords, {
                'label': 'Keywords',
                'placeholder': 'Please enter meta keywords.',
            }) }}
        </div>
        <div class="tab-pane fade" id="social" role="tabpanel" aria-labelledby="social-tab">
            <div class="row">
                <div class="col-md-4">
                    {{ form_row(form.facebookAppId, {
                        'label': 'Facebook App Id',
                        'placeholder': 'Please enter the Facebook application id for this site.',
                    }) }}
                    {{ form_row(form.facebookType, {
                        'label': 'Facebook Type',
                        'placeholder': 'Please enter the Facebook application type e.g. website.',
