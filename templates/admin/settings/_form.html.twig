{{ form_start(form) }}
    {{ form_errors(form) }}
    <ul class="nav nav-tabs" id="settingsTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link" id="metadata-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Global</a>
        </li>
