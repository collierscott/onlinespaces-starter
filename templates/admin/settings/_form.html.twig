                    }) }}
                    {{ form_row(form.facebookProfileId, {
                        'label': 'Facebook Profile Id',
                        'placeholder': 'Please enter the Facebook Profile Id',
                    }) }}
                    {{ form_row(form.facebookPage, {
                        'label': 'Facebook Pages',
                        'placeholder': 'Please enter the Facebook Page',
                    }) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.twitterUsername, {
                        'label': 'Twitter Username',
                        'placeholder': 'Please enter the Twitter username',
                    }) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.googleId, {
                        'label': 'Google Analytics Id',
                        'placeholder': 'Please enter the Google Analytics Id',
                    }) }}
                </div>
            </div>


