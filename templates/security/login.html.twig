{% extends '_layouts/single_page/single_page.html.twig' %}
{% block title %}Log in!{% endblock %}
{% block body %}
<div class="col col-login mx-auto">
    <div class="text-center mb-6 mt-3">
        <form class="card" action="" method="post">
            <div>
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
            </div>
            <div class="card-body p-6">
                <div class="card-title">Login to your account</div>
                <div class="form-group">
                    <label for="inputUsername" class="form-label">Username</label>
                    <input type="text" class="form-control"
                           id="inputUsername"
                           name="username"
                           value="{{ last_username }}"
                           aria-describedby="usernameHelp"
                           placeholder="Enter username" required autofocus>
                </div>
                <div class="form-group">
                    <label class="form-label" for="inputPassword" class="sr-only">
                        Password
                        {#<a href="{{ site.base }}/forgot-password.html" class="float-right small">I forgot password</a>#}
                    </label>
                    <input type="password"
                           class="form-control"
                           name="password"
                           id="inputPassword" placeholder="Password">
                </div>
                <div class="form-group">
                    {#
                       Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                       See https://symfony.com/doc/current/security/remember_me.html

                        <label class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" name="_remember_me" />
                            <span class="custom-control-label">Remember me</span>
                        </label>
                   #}

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                </div>

                <div class="form-footer">
                    <button type="submit" class="btn btn-primary btn-block">Sign in</button>
                </div>
            </div>
        </form>

        <div class="text-center text-muted">
            Don't have account yet? <a href="{{ path('form_register') }}">Sign up</a>
        </div>
    </div>
</div>
{% endblock %}
