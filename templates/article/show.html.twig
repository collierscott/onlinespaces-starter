{% extends '_layouts/default/default.html.twig' %}
{% set article = context['content'] %}

{% block title %}{{ onl_render_title(settings, page) }} - {{ article.title }}{% endblock %}

{% block content %}
     <div class="container">
         {% include '_components/_page-title.html.twig' with { 'title': article.title } %}
         <div class="d-flex align-items-center mt-auto pb-2">
             <div class="avatar avatar-md mr-3" style="background-image: url({{ asset('build/images/user.png') }})"></div>
             <div>
                 <a href="{{ path('article_show', {'slug': article.slug }) }}" class="text-default">{{ article.author.username }}</a>
                 <small class="d-block text-muted">{{ article.createdAt | date("m/d/Y")}}</small>
             </div>
             <div class="ml-auto text-muted">
                 <a href="javascript:void(0)" class="icon d-none d-md-inline-block ml-3"><i class="fe fe-heart mr-1"></i></a>
             </div>
         </div>
        <div class="row">
            <div class="col-lg-9">
                <div class="card">
                    <div class="card-body">
                        <div class="text-wrap p-lg-6">
                            {% if article.content %}
                                <p>{{ article.content | raw }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 order-lg-1 mb-4">
                <a href="#" class="btn btn-block btn-primary mb-6">
                    <i class="fe fe-github mr-2"></i>Browse source code
                </a>
                <div class="list-group list-group-transparent mb-0">
                    <a href="#" class="list-group-item list-group-item-action"><span class="icon mr-3"><i class="fal fa-page"></i></span>TEST</a>
                </div>
                <div class="d-none d-lg-block mt-6">

                </div>
            </div>
        </div>
    </div>
{% endblock %}