{% extends '_layouts/default/default.html.twig' %}
{% set article = context['content'] %}

{% block title %}{{ onl_render_title(settings, page) }} - {{ article.title }}{% endblock %}

{% block body %}
     <div class="container">
         {% include '_layouts/components/_page-title.html.twig' with { 'title': article.title, 'subtitle': article.createdAt | date("m/d/Y") } %}
        <div class="row">
            <div class="col-lg-9">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center mt-auto pb-2">
                            <div class="avatar avatar-md mr-3" style="background-image: url({{ asset('build/images/user.png') }})"></div>
                            <a href="{{ path('article_show', {'slug': article.slug }) }}" class="text-default">{{ article.author.username }}</a>
                            <div class="ml-auto text-muted">
                                <a href="javascript:void(0)" class="icon d-none d-md-inline-block ml-3"><i class="fe fe-heart mr-1"></i></a>
                            </div>
                            <div>
                                {% include '_layouts/components/social/_social-buttons.html.twig' %}
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="card-text text-wrap p-lg-6">
                            {% if article.content %}
                                <p>{{ article.content | raw }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 order-lg-1 mb-4">
                <div class="mb-2">
                    <iframe
                            src="//rcm-na.amazon-adsystem.com/e/cm?o=1&p=12&l=ur1&category=amazonhomepage&f=ifr&linkID=24a65a219b0af8578cd848946077a909&t={{ amazon_affiliate_id }}&tracking_id={{ amazon_affiliate_id }}"
                            width="300" height="250" scrolling="no" border="0" marginwidth="0" style="border:none;" frameborder="0">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
{% endblock %}