{% extends '_layouts/default.html.twig' %}
{% set articles = context['content'] %}
{% block title %}{{ onl_render_title(settings, page) }} - Articles{% endblock %}

{% block body %}
    <div class="container">
        <h1>Articles</h1>
        <table class="table">
            <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Author
                </th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>
                        <a href="{{path('article_show', {'slug': article.slug})  }}">{{ article.title }}</a>
                    </td>
                    <td>{{ article.author.username }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}